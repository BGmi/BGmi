{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:app"
  ],
  "pre-commit": {
    "enabled": true
  },
  "baseBranches": [
    "master",
    "/^v\\d+$/"
  ],
  "prConcurrentLimit": 4,
  "rangeStrategy": "pin",
  "separateMajorMinor": true,
  "lockFileMaintenance": {
    "schedule": [
      "before 5am on monday"
    ]
  },
  "packageRules": [
    {
      "matchBaseBranches": [
        "/^v\\d+$/"
      ],
      "prPriority": 10
    },
    {
      "groupName": "pre-commit hooks",
      "matchManagers": [
        "pre-commit"
      ],
      "semanticCommitType": "style",
      "semanticCommitScope": ""
    },
    {
      "matchPackageNames": [
        "wcwidth",
        "anime-episode-parser"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
