{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:monthly",
    "github>Trim21/renovate-config:poetry",
    "github>Trim21/renovate-config:app"
  ],
  "enabledManagers": [
    "pre-commit",
    "poetry",
    "github-actions"
  ],
  "pre-commit": {
    "enabled": true
  },
  "baseBranches": [
    "master"
  ],
  "rangeStrategy": "pin",
  "separateMajorMinor": true,
  "lockFileMaintenance": {
    "schedule": [
      "before 5am on monday"
    ]
  },
  "automerge": true,
  "packageRules": [
    {
      "automerge": false,
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "groupName": "pre-commit hooks",
      "matchManagers": [
        "pre-commit"
      ],
      "semanticCommitType": "style",
      "semanticCommitScope": ""
    },
    {
      "matchPackageNames": [
        "wcwidth"
      ],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "deps-prod",
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "groupName": "deps-dev",
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "semanticCommitScope": "dev"
    }
  ]
}
