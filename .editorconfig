[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
max_line_length = 100

[*.{py, rst}]
indent_size = 4
end_of_line = lf

[*.{yaml, yml, cfg}]
indent_size = 2


[Makefile]
indent_size = 4
indent_style = tab

[*.vbs]
end_of_line = crlf
